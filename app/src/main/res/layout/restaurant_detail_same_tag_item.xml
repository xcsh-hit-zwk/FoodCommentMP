<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/restaurant_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/restaurant_detail_same_tag_item_restaurant_name"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="餐厅名"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurant_detail_same_tag_item_restaurant_likes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="点赞数"/>
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_liked"/>

    </LinearLayout>

    <TextView
        android:id="@+id/restaurant_detail_same_tag_item_restaurant_block"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:text="餐厅街区"/>

</LinearLayout>