<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/admin_food_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/admin_food_exit_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="440dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_exit"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/search_edit_head_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_search_edit_head" />

            <EditText
                android:id="@+id/food_search_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:hint="请输入招牌菜名称" />

            <ImageButton
                android:id="@+id/food_search_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_enter"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/admin_food_add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="440dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/ic_restaurant_add"/>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_info_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>