<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/title_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_restaurant_title_image" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/admin_restaurant_add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_restaurant_add"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurant_info_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>