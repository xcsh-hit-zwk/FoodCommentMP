<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/restaurant_detail_food_item_food_image"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurant_detail_food_item_food_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="菜品名"/>

        <ImageButton
            android:id="@+id/restaurant_detail_food_item_food_likes_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_before_like"/>

        <TextView
            android:id="@+id/restaurant_detail_food_item_food_likes"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:text="点赞数"/>

    </LinearLayout>

</LinearLayout>